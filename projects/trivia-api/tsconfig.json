{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "../../dist/api",
    "baseUrl": "./"
  },
  "lib": ["es2015", "es2018", "dom"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
